<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.suumo.monitor</string>

  <key>ProgramArguments</key>
  <array>
    <string>/Users/morisakura/dev/suumo/scripts/run_monitor.sh</string>
  </array>

  <!-- 600秒 = 10分ごとに実行 -->
  <key>StartInterval</key>
  <integer>600</integer>

  <!-- 登録直後に1回実行 -->
  <key>RunAtLoad</key>
  <true/>

  <key>StandardOutPath</key>
  <string>/Users/morisakura/dev/suumo/data/launchd.log</string>

  <key>StandardErrorPath</key>
  <string>/Users/morisakura/dev/suumo/data/launchd.err</string>

  <key>WorkingDirectory</key>
  <string>/Users/morisakura/dev/suumo</string>
</dict>
</plist>
